
   
 // берёт число возврат-строка
fn n2s( $n )
 {
  $s=""
  num2str( $s, $n )
  ret( $s)
 } 
  
  
 fn GetX($x)
  {    ret( ($x*16)-389) }
  
 fn GetY($y)
  {    ret(($y*16)-209)}
  
  fn SetLand($x,$y)
    { fbox(GetX($x),GetY($y),15,15,#555555)}
    
//-------------------------------------
   fn generateX()
    {
      $n= rand() div 762
      ret($n+1) 
    }
//-------------------------------------
  fn generateY()
    {
      $n= rand() div 1489
      ret($n+1)
    }
//-------------------------------------    
//////////////////   РИСУЕМ КАРКАС МИРА ///////////////////////////////////
 fn Setka()
  {      fbox( -390,-210,720,384,BLACK)
    $x=-390 
    while($x<331)
       { line($x,-210,$x,174,#999999)  $x=$x+16}
    $y=-210
    while($y<175)
       { line(-390,$y,330,$y,#999999)    $y=$y+16}  
    $x=0 $y=0
    while ($x<45)
       {  SetLand($x,$y)   SetLand($x,$y+23)  $x=$x+1  } 
    $x=0 $y=1
    while ($y<23)
       {  SetLand($x,$y)   SetLand($x+44,$y)  $y=$y+1  } 
       $x=9 $y=1
    while ($y<8)
       {  SetLand($x,$y)   SetLand($x+11,15-$y)  $y=$y+1  }   
       
   }
